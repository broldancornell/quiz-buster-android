<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/background_light" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.14"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.74">

            <TextView
                android:text=" You ranked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtRanked"
                android:gravity="center_vertical"
                android:textSize="30dp" />

            <TextView
                android:text=" Final Score :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtFinalScore"
                android:gravity="center_vertical"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="1st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtRankedNumber"
                android:gravity="center_vertical"
                android:textSize="30dp" />

            <TextView
                android:text="100 busts!"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtFinalScoreNumber"
                android:gravity="center_vertical"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Go Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoMain"
        android:layout_weight="0.04"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold"
        android:onClick="onGoMainClicked"
        android:textSize="30dp" />
 </LinearLayout>