<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/white" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"/>

    <TextView
        android:id="@+id/text_view_final_score_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:textSize="65sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:text="@string/final_score"/>

    <TextView
        android:id="@+id/text_view_final_score_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/button_fb_share"
        android:text="@string/share_on_fb"
        android:onClick="shareOnFBClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="50sp"
        android:background="@drawable/utility_button_mobile"
        android:layout_marginLeft="@dimen/utility_button_margin"
        android:layout_marginStart="@dimen/utility_button_margin"
        android:layout_marginRight="@dimen/utility_button_margin"
        android:layout_marginEnd="@dimen/utility_button_margin"
        android:textStyle="bold"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/button_go_home"
        android:text="@string/button_go_back"
        android:onClick="backToMainButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="50sp"
        android:background="@drawable/utility_button_mobile"
        android:layout_marginLeft="@dimen/utility_button_margin"
        android:layout_marginStart="@dimen/utility_button_margin"
        android:layout_marginRight="@dimen/utility_button_margin"
        android:layout_marginEnd="@dimen/utility_button_margin"
        android:textStyle="bold"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"/>
 </LinearLayout>