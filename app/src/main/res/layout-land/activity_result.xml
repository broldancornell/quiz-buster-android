<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/white" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>

    <TextView
        android:id="@+id/text_view_final_score_label"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:text="@string/final_score"/>

    <TextView
        android:id="@+id/text_view_final_score_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/button_go_home"
        android:text="@string/button_go_back"
        android:onClick="backToMainButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="30sp"
        android:background="@drawable/utility_button_mobile"
        android:layout_marginLeft="200dp"
        android:layout_marginStart="200dp"
        android:layout_marginRight="200dp"
        android:layout_marginEnd="200dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>
 </LinearLayout>